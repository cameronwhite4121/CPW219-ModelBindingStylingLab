@model UserProfile

@{
    ViewData["Title"] = "J. Doe profile page";
}

<h1>Profile Page</h1>
<br />
<div class="container text-center">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h4>UserProfile</h4>
        </div>
    </div>
</div>
<hr />

<div class="container text-center">
    <div class="row g-2">
        <div class="col-6">
            <div class="p-3">
                <dt>
                    @Html.DisplayNameFor(model => model.UserProfileId)
                </dt>
            </div>
        </div>
        <div class="col-6">
            <div class="p-3">
                <dd>
                    @Model.UserProfileId
                </dd>
            </div>
        </div>
        <div class="col-6">
            <div class="p-3">
                <dt>
                    @Html.DisplayNameFor(model => model.FullName)
                </dt>
            </div>
        </div>
        <div class="col-6">
            <div class="p-3">
                <dd>
                    @Model.FullName
                </dd>
            </div>
        </div>
        <div class="col-6">
            <div class="p-3">
                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
            </div>
        </div>
        <div class="col-6">
            <div class="p-3">
                <dd>
                    @Model.Email
                </dd>
            </div>
        </div>
        <div class="col-6">
            <div class="p-3">
                <dt>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </dt>
            </div>
        </div>
        <div class="col-6">
            <div class="p-3">
                <dd>
                    @Model.PhoneNumber
                </dd>
            </div>
        </div>
        <div class="col-6">
            <div class="p-3">
                <dt>
                    @Html.DisplayNameFor(model => model.ImageUrl)
                </dt>
            </div>
        </div>
        <div class="col-6">
            <div class="p-3">
                <dd>
                    @Model.ImageUrl
                </dd>
            </div>
        </div>
        <div class="col-6">
            <div class="p-3">
                <dt>
                    @Html.DisplayNameFor(model => model.GitHubUrl)
                </dt>
            </div>
        </div>
        <div class="col-6">
            <div class="p-3">
                <dd>
                    @Model.GitHubUrl
                </dd>
            </div>
        </div>
        <div class="col-6">
            <div class="p-3">
                <dt>
                    @Html.DisplayNameFor(Model => Model.DateOfBirth)
                </dt>
            </div>
        </div>
        <div class="col-6">
            <div class="p-3">
                <dd>
                    @Model.DateOfBirth.ToString("yyyy-MM-dd")
                </dd>
            </div>
        </div>
        <div class="col-6">
            <div class="p-3"><dt>Skilled Languages</dt></div>
        </div>
        <div class="col-6">
            <div class="p-3">
                <dd>
                    @string.Join(", ", Model.SkilledLanguages)
                </dd>
            </div>
        </div>
    </div>
</div>
